<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:CatFacts.ViewModels"
             x:Class="CatFacts.Views.CatFactPage"
             Title="Cat Facts"
             BackgroundImageSource="catbackground.jpg"
             NavigationPage.HasNavigationBar="False">
    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Text="Get New Cat Fact"
                Grid.Row="0"
                BackgroundColor="#6200EE"
                TextColor="White"
                WidthRequest="150"
                FontSize="16"
                Padding="10"
                CornerRadius="10"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                Margin="0,10,0,10"
                Command="{Binding GetCatFactCommand}"
                IsEnabled="True" />

        <Button Text="Go to Breeds"
                Grid.Row="1"
                WidthRequest="150"
                BackgroundColor="#03DAC6"
                TextColor="White"
                FontSize="16"
                Padding="10"
                CornerRadius="10"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                Margin="0,0,0,20"
                Command="{Binding NavigateToBreedsCommand}"
                IsEnabled="True" />

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding CatFacts}"
                        SelectionMode="None">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="3" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="Orange"
                           Padding="10"
                           CornerRadius="10"
                           HasShadow="True">
                        <StackLayout>
                            <Label Text="{Binding Fact, StringFormat='Fact: {0}'}"
                                   FontSize="16"
                                   TextColor="Black"
                                   FontAttributes="Bold"
                                   LineBreakMode="WordWrap" />
                            <Label Text="{Binding Length, StringFormat='Length: {0}'}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="White" />
                            <Button Text="Eliminar"
                                    BackgroundColor="Red"
                                    WidthRequest="200"
                                    TextColor="White"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:CatFactViewModel}}, Path=DeleteCatFactCommand}"
                                    CommandParameter="{Binding .}"
                                    IsEnabled="True" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>